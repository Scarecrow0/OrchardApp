<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--changeable fragment-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttongreen"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1">
    </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/guoyouxuan"
            android:textSize="35sp" />
        <LinearLayout
            android:id="@+id/message_box_button"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:background="@drawable/message_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/xiaoxi"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>
    <fragment
        android:id="@+id/guide_fragment"
        android:name="com.scarecrow.root.orchardapp.EmptyFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </fragment>

    <!--guide bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/buttongreen"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/zhuyebuttom"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:src="@drawable/house_home" />

            <TextView
                android:id="@+id/zhuye_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="@string/zhuye"
                android:textAlignment="center"
                android:textSize="15sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/faxianbuttom"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:src="@drawable/leave_main" />
            <TextView
                android:id="@+id/faxian_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/faxian"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/wodebuttom"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:src="@drawable/apple_my" />
            <TextView
                android:id="@+id/wode_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/wode"
                android:textAlignment="center"
                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>