<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--changeable fragment-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttongreen"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1">
    </LinearLayout>

    </LinearLayout>
    <fragment
        android:id="@+id/guide_fragment"
        android:name="com.scarecrow.root.orchardapp.fragments.FragmentEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </fragment>

    <!--guide bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/zhuyebuttom"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/b_1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:id="@+id/zhuye_bar" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/faxianbuttom"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="2dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/b_2" />

            <ImageView
                android:id="@+id/fanxian_bar"
                android:layout_width="match_parent"
                android:layout_height="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/wodebuttom"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_marginTop="2dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/b_3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:id="@+id/wode_bar" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>