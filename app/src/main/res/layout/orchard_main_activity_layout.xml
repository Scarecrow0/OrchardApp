<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/guangguoyuan"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@color/buttongreen" />


        <com.scarecrow.root.orchardapp.AdsBanner
            android:id="@+id/orchard_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </com.scarecrow.root.orchardapp.AdsBanner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/lightgray">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/orchard_single_entrybutton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="25dp"
                    android:text="@string/dingmengpiao" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="25dp"
                    android:text="@string/zhangshangdaoyou" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="refresh" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_i_joined_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/lightgray">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/lightgray">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dangqianhuodong"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/lightgray">

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/event_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</ScrollView>