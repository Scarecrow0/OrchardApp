<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/youjixianguo"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@color/buttongreen" />

        <com.scarecrow.root.orchardapp.AdsBanner
            android:id="@+id/fruitshop_banner"
            android:layout_width="match_parent"
            android:layout_height="170dp">

        </com.scarecrow.root.orchardapp.AdsBanner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/lightgray">
        </LinearLayout>

        <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
            android:orientation="vertical">

            <TextView
             android:id="@+id/fruitshop_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/buttongreen"
             android:text="name"
             android:textSize="30sp" />

             <TextView
                 android:id="@+id/fruitshop_price"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="start"
                 android:layout_marginEnd="10dp"
                 android:layout_marginTop="5dp"
                 android:text="price"
                 android:textColor="@color/colorAccent"
                 android:textSize="40sp" />

         <TextView
             android:id="@+id/fruitshop_stockremain"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="start"
             android:layout_marginEnd="10dp"
             android:layout_marginTop="5dp"
             android:text="remain"
             android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray">
            </LinearLayout>


         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="end"
             android:layout_marginEnd="10dp"
             android:layout_marginTop="5dp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_marginEnd="10dp"
                 android:layout_marginTop="5dp"
                 android:gravity="center"

                 android:text="@string/goumaishuliang"
                 android:textSize="15sp" />

             <NumberPicker
                 android:id="@+id/fruit_buy_num"
                 android:layout_width="50dp"
                 android:layout_height="60dp"
                 android:layout_gravity="end">

             </NumberPicker>


         </LinearLayout>
            <Button
                android:id="@+id/fruit_buy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/buttongreen"
                android:padding="10dp"
                android:text="@string/yuding" />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="5dp"
             android:background="@color/lightgray">

         </LinearLayout>


     </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shuiguojianjie"/>
        <TextView
            android:id="@+id/fruitshop_bref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bref"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray">
        </LinearLayout>
        <TextView
            android:id="@+id/fruitshop_longintro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>