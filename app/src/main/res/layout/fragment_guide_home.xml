<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--gallery -->
                <com.scarecrow.root.orchardapp.AdsBanner
                    android:id="@+id/main_ads_header"
                    android:layout_width="match_parent"
                    android:layout_height="140dp">

                </com.scarecrow.root.orchardapp.AdsBanner>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/lightgray"></LinearLayout>

                <!-- section one-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:orientation="horizontal">
                    <!--button -->
                    <LinearLayout
                        android:id="@+id/bottom_guangguoyuan"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="0.01dp"
                        android:layout_weight="1.5"
                        android:background="@color/maingreen"
                        android:clickable="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/guangguoyuan"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp" />
                    </LinearLayout>

                    <!--gallery-->
                    <com.scarecrow.root.orchardapp.AdsBanner
                        android:id="@+id/main_ads_orchard"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                    </com.scarecrow.root.orchardapp.AdsBanner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/lightgray"></LinearLayout>
                <!-- section two-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp">
                    <!--gallery-->
                    <com.scarecrow.root.orchardapp.AdsBanner
                        android:id="@+id/main_ads_fruit"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                    </com.scarecrow.root.orchardapp.AdsBanner>

                    <!--buttom -->
                    <LinearLayout
                        android:id="@+id/bottom_chishuiguo"
                        android:layout_width="0.01dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0.01dp"
                        android:layout_weight="1.5"
                        android:background="@color/maingreen"
                        android:clickable="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/chishuiguo"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/lightgray"></LinearLayout>
                <!-- section three-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp">
                    <!--bottom -->
                    <LinearLayout
                        android:id="@+id/bottom_xiaojiangkang"
                        android:layout_width="0.01dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="0.1dp"
                        android:layout_weight="1.5"
                        android:background="@color/maingreen"
                        android:clickable="true"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/xiaojiankang"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp" />
                    </LinearLayout>

                    <!--gallery-->
                    <com.scarecrow.root.orchardapp.AdsBanner
                        android:id="@+id/main_ads_healthy"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                    </com.scarecrow.root.orchardapp.AdsBanner>

                </LinearLayout>


                <!--
                add viewpager :
                    event_recommd/other_tour
                -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/lightgray"></LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightgray"></LinearLayout>

                <TextView
                    android:id="@+id/tab_switch_nearby_orchard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/zhoubianyou"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightgray"></LinearLayout>

                <TextView
                    android:id="@+id/tab_switch_global_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/guoyuanhuodong"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/lightgray"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/lightgray"></LinearLayout>

            <fragment
                android:id="@+id/fragment_others_event"
                android:name="com.scarecrow.root.orchardapp.EmptyFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></fragment>
        </LinearLayout>
    </ScrollView>
</LinearLayout>