<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:orientation="vertical"
                android:rowCount="5">

                <ImageView
                    android:id="@+id/home_img_view_top"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_column="0"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/h1"
                    android:layout_columnSpan="1"
                    android:layout_row="0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/home_img_button_orchard"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="6dp" />

                    <ImageView
                        android:id="@+id/home_img_button_healthy"
                        android:layout_width="0dp"
                        android:scaleType="centerCrop"
                        android:layout_height="120dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/home_img_button_fruit"
                    android:layout_width="match_parent"
                    android:layout_height="117dp"
                    android:layout_column="0"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="6dp"
                    android:layout_row="3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tab_switch_nearby_orchard"
                        android:layout_width="0px"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp" />

                    <ImageView
                        android:id="@+id/tab_switch_global_event"
                        android:layout_width="0px"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:layout_weight="1" />
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>