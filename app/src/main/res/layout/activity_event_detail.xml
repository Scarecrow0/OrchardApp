<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/buttongreen"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/guoyuanhuodong"
            android:textColor="#000000"
            android:textSize="25sp" />

        <com.scarecrow.root.orchardapp.views.ViewPagerAdsBanner
            android:id="@+id/event_banner"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        </com.scarecrow.root.orchardapp.views.ViewPagerAdsBanner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttongreen"
                android:padding="5dp"
                android:paddingStart="15dp"
                android:text="name"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/event_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingEnd="15dp"
                android:text="target"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />


            <Button
                android:id="@+id/event_join_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingEnd="20dp"
                android:text="join!" />

            <TextView
                android:id="@+id/event_publish_orchard_n_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:padding="10dp"
                android:paddingEnd="10dp"
                android:text="happened orchard and date"
                android:textColor="#000000"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/lightgray">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:paddingStart="15dp"
                android:text="@string/renwujianjie"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/event_bref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/lightgray">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:paddingStart="15dp"
            android:text="@string/renwuxuzhe"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/event_longintro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:paddingStart="10dp"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@color/lightgray">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/canjiahuodongdeyonghu"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ListView
            android:id="@+id/event_joineduser_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"></ListView>

    </LinearLayout>
</ScrollView>